<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" prefHeight="232.0" prefWidth="257.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.presentation.controller.Edit">
   <HBox alignment="CENTER" prefHeight="38.0" prefWidth="257.0">
      <Label alignment="CENTER" text="Please Enter data">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
   </HBox>
   <HBox prefHeight="38.0" prefWidth="257.0">
      <Label fx:id="first_name_label" alignment="CENTER" contentDisplay="BOTTOM" text="First Name">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </Label>
      <TextField fx:id="first_name_textfield">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin>
      </TextField>
   </HBox>
   <HBox prefHeight="38.0" prefWidth="257.0">
      <Label fx:id="last_name_label" alignment="CENTER" contentDisplay="BOTTOM" text="Last Name">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </Label>
      <TextField fx:id="last_name_textfield">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin>
      </TextField>
   </HBox>
   <HBox prefHeight="38.0" prefWidth="257.0">
      <Label fx:id="city_label" alignment="CENTER" prefHeight="17.0" prefWidth="59.0" text="City">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </Label>
      <TextField fx:id="city_textfield">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin>
      </TextField>
   </HBox>
   <HBox prefHeight="38.0" prefWidth="257.0">
      <Label fx:id="favorite_color_label" alignment="CENTER" prefHeight="17.0" prefWidth="59.0" text="Fav. Color">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </Label>
      <TextField fx:id="favorite_color_texfield">
         <HBox.margin>
            <Insets top="10.0" />
         </HBox.margin>
      </TextField>
   </HBox>
   <HBox alignment="CENTER" prefHeight="56.0" prefWidth="257.0">
      <Button minWidth="54.0"  onAction="#addPerson" text="Add" defaultButton="true" />
      <Button  onAction="#deletePerson" text="Delete">
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin>
      </Button>
   </HBox>
   <HBox alignment="CENTER"  prefHeight="35.0" prefWidth="257.0">
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </padding>
      <Button  onAction="#close" text="Close"/>
   </HBox>
</VBox>
